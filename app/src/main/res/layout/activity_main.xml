<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:onClick="onClickSendStringButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send string" />

    <Button
        android:onClick="onClickSendNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send number" />

    <Button
        android:onClick="onClickSendArrayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send array" />

    <Button
        android:onClick="onClickSendBundleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send bundle" />


</LinearLayout>